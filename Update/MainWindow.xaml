<Window x:Class="Update.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Update"
        mc:Ignorable="d"
        Title="Updating..." Height="300" Width="500" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" Background="#101010"
        ContentRendered="OnContentRendered">

    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="25" CaptionHeight="25" ResizeBorderThickness="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Label Name="CommonTitle" Content="Terabit Desktop" VerticalAlignment="Top" Margin="5" Foreground="#afafaf" FontFamily="Content/Fonts/#Oxanium" FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Name="CurrentState" Content="Updating..." VerticalAlignment="Bottom" VerticalContentAlignment="Center" Margin="5,5,5,0" Foreground="#afafaf" FontFamily="Content/Fonts/#Oxanium" FontSize="24" FontWeight="Thin"/>
    </Grid>
</Window>
